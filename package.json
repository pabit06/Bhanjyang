{
  "name": "bhanjyang-cooperative",
  "version": "1.0.0",
  "description": "Bhanjyang Cooperative website with Django and Tailwind CSS",
  "scripts": {
    "dev": "npx @tailwindcss/cli -i ./static/src/input.css -o ./static/dist/output.css --watch",
    "build": "npx @tailwindcss/cli -i ./static/src/input.css -o ./static/dist/output.css --minify",
    "build:watch": "npx @tailwindcss/cli -i ./static/src/input.css -o ./static/dist/output.css --watch --minify",
    "clean": "rimraf ./static/dist",
    "start": "python manage.py runserver",
    "migrate": "python manage.py migrate",
    "makemigrations": "python manage.py makemigrations",
    "collectstatic": "python manage.py collectstatic --noinput",
    "test": "python manage.py test",
    "shell": "python manage.py shell"
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.1.10",
    "tailwindcss": "^4.1.10"
  },
  "devDependencies": {
    "rimraf": "^5.0.0"
  },
  "keywords": ["django", "tailwindcss", "cooperative", "nepal"],
  "author": "Bhanjyang Cooperative",
  "license": "MIT"
}
